header
	height 45px;
	width 100%
	position absolute
	left 0
	top 0
	border-bottom 1px solid #dfe3e4
	background white

	#logo-header
		width 340px
		height inherit
		border-right 1px solid #dfe3e4
		display inline-block
		vertical-align top

		img
			margin-top: -20px;
			height: 60px;
			margin-left: 25px;

	#menu-header
		display inline-block
		vertical-align top

		li 
			display inline-block
			vertical-align top
			margin-right 20px

			a
				color #575d5d
				text-decoration none
			a.active
				color black